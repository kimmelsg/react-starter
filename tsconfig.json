{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es5", "es6", "dom", "es7", "esnext"],
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["src/shared/*"],
      "schema": ["src/base/schema"]
    }
  },
  "include": ["./src"],
  "exclude": ["./src/**/*.test.tsx"]
}
